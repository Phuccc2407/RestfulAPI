<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]Nhạc Nhẽo - Soán Ngôi Spotify</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="d-flex justify-content-between align-items-center" style="margin: 0 10px; position: sticky;">
            <!-- Left -->
            <div class="left-header">
                <button class="circle-btn" style="background-color: white; color: black;">
                    <i class="fa-solid fa-blog"></i>
                </button>
            </div>

            <!-- Middle -->
            <div class="middle-header d-flex justify-content-center w-50 mx-auto" style="gap: 10px;">
                <button class="circle-btn">
                    <i class="fa-solid fa-house"></i>
                </button>
                <form class="d-flex w-50" role="search" id="search-form" method="get" action="/search" style="gap: 10px;">
                    <input id="search-input" name="keyword" class="search-bar" type="search" placeholder="Bạn muốn nghe bài nhạc nào hôm nay?" aria-label="Search">
                    <button class="circle-btn" type="submit">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </form>
            </div>

            <!-- Right -->
            <div class="d-flex right-header" style="gap: 10px;">
                <!-- Before login -->
                <a href="/mvcauth/register" id="registerLink" style="text-decoration: none;">
                    <button class="circle-btn" style="width: 100px; border-radius: 30px; font-size: 15px; font-weight: bold; background-color: #1f1f1f; color: #b3b3b3;">
                        <span id="registerText">Register</span>
                    </button>
                </a>
                <a href="/mvcauth/login" id="loginLink" style="text-decoration: none;">
                    <button src="/uploads/images/useravatar.jpg" class="circle-btn" style="width: 100px; border-radius: 30px; font-size: 15px; font-weight: bold; background-color: #e99d72; color:black;">
                        <span id="loginText">Log in</span>
                    </button>
                </a>

                <!-- After login -->
                <div id="userMenu" class="dropdown" style="display: none;">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <img alt="avatar" width="50" height="50" class="rounded-circle me-2">
                        <span id="userNameDisplay"></span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="#" id="profileLink">Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#" id="logoutBtn">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <!-- Main -->
    <div style="height: 100vh;">
        <div class="main-container d-flex rounded-container" style="border-radius: 20px; padding: 10px; gap: 10px; height: 85vh;">
            <!-- Sidebar -->
            <nav class="nav flex-column p-3 d-flex justify-content-center" style="width: 150px; background-color: #E99D72; border-radius: 20px; gap: 10px; position: sticky;">
                <li class="nav-item">
                    <a href="/" class="nav-link d-flex flex-column align-items-center custom-link">
                        <i class="fa-solid fa-house fa-2x"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="" class="nav-link d-flex flex-column align-items-center custom-link">
                        <i class="fa-solid fa-fire fa-2x"></i>
                        <span>Trending</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="" class="nav-link d-flex flex-column align-items-center custom-link">
                        <i class="fa-solid fa-book fa-2x"></i>
                        <span>Library</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="" class="nav-link d-flex flex-column align-items-center custom-link">
                        <i class="fa-solid fa-heart fa-2x"></i>
                        <span>Favourite</span>
                    </a>
                </li>
            </nav>

            <!-- Main Content -->
            <div class="circles d-flex flex-column" style="overflow-y: auto; overflow-x: hidden;">
                <div class="flex-grow-1 m-4" style="font-size: 50px;">
                    <main role="main" class="container main-content">
                        @RenderBody() <!-- nội dung trang con sẽ hiển thị ở đây -->

                        <div class="tracks-container"></div>
                    </main>
                </div>

                <!-- Footer -->
                <footer class="footer-container" style="height: 350px; border-radius: 20px; background-color: #1f1f1f;">
                    <hr style="margin: 20px;">
                    <div class="footer-container d-flex align-items-start" style="gap: 100px; margin: 0 20px;">
                        <!-- Footer Box 1 -->
                        <div class="footer-box d-flex flex-column">
                            <span>Company</span>
                            <a href="#" class="text-white">About Us</a>
                            <a href="#" class="text-white">Jobs</a>
                            <a href="#" class="text-white">For the Record</a>
                        </div>
                        <!-- Footer Box 2 -->
                        <div class="footer-box d-flex flex-column">
                            <span>Communities</span>
                            <a href="#" class="text-white">For Artist</a>
                            <a href="#" class="text-white">Developers</a>
                            <a href="#" class="text-white">Advertising</a>
                            <a href="#" class="text-white">Investors</a>
                            <a href="#" class="text-white">Vendors</a>
                        </div>
                        <!-- Footer Box 3 -->
                        <div class="footer-box d-flex flex-column">
                            <span>Useful links</span>
                            <a href="#" class="text-white">Support</a>
                            <a href="#" class="text-white">Free Mobile App</a>
                            <a href="#" class="text-white">Popular by Country</a>
                            <a href="#" class="text-white">Import your music</a>
                        </div>
                        <!-- Footer Box 4 -->
                        <div class="footer-box d-flex flex-column">
                            <span>Nhạc Nhẽo Plans</span>
                            <a href="#" class="text-white">Premium Individual</a>
                            <a href="#" class="text-white">Premium Student</a>
                            <a href="#" class="text-white">Nhạc Nhẽo Free</a>
                        </div>
                    </div>
                    <hr style="margin: 20px;">
                    <!-- Bottom Footer -->
                    <div class="footer-bottom d-flex justify-content-between align-items-center">
                        <ul class="d-flex list-unstyled " style="gap: 20px; margin: 20px;">
                            <li><a href="#" class="text-white">Legal</a></li>
                            <li><a href="#" class="text-white">Safety & Privacy Center</a></li>
                            <li><a href="#" class="text-white">Privacy Policy</a></li>
                            <li><a href="#" class="text-white">Cookies</a></li>
                            <li><a href="#" class="text-white">About Ads</a></li>
                            <li><a href="#" class="text-white">Accessibility</a></li>
                        </ul>
                        <span style="margin: 20px; font-size: 17px; font-weight: lighter;">&copy; 2025 Nhạc Nhẽo AB</span>
                    </div>
                </footer>
            </div>

            <!-- Right Content -->
            <div class="d-flex flex-column" style="width: 500px; background-color: #1f1f1f; border-radius: 20px; overflow-y: auto;">
            </div>
        </div>

        <!-- Song Player -->
        <div class="song-player" style="height: 15vh; background-color: #1f1f1f; border-radius: 20px; padding: 10px; margin: 0 10px;">
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
